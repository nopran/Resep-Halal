<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normall"
    android:id="@+id/viewHistory">

    <Button
        android:id="@+id/btnView"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#F97D00"
        android:text="History"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewHistory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btnSearch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDateFrom"
        android:background="#ffffff"
        android:width="90dp"
        android:height="40dp"
        android:hint="From date"
        android:gravity="center"
        android:layout_below="@+id/btnView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:height="60dp"
        android:id="@+id/btnDateFrom"
        android:background="@drawable/date_icon"
        android:layout_alignBottom="@+id/editTextDateFrom"
        android:layout_toEndOf="@+id/editTextDateFrom"
        android:layout_marginBottom="-10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDateTo"
        android:hint="To date"
        android:gravity="center"
        android:background="#ffffff"
        android:width="90dp"
        android:height="40dp"
        android:layout_below="@+id/btnView"
        android:layout_toEndOf="@+id/btnDateFrom"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:height="60dp"
        android:id="@+id/btnDateTo"
        android:background="@drawable/date_icon"
        android:layout_alignTop="@+id/btnDateFrom"
        android:layout_toEndOf="@+id/editTextDateTo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/green_button"
        android:text="Search"
        android:textSize="25dp"
        android:textStyle="bold"
        android:height="60dp"
        android:layout_below="@+id/btnDateTo"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
