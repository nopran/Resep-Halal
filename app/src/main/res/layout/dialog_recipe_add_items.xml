<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_imageView"
        android:background="@drawable/no_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/a_btnAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add ingredients in refrigerator"
        android:layout_gravity="center"
        android:background="@drawable/green_button"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/a_txtRecipe"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/a_listView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/a_btnAddNew"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of recipe"
       android:textStyle="bold"
        android:id="@+id/a_txtRecipe"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@+id/a_imageView"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/a_btnAddNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new ingredients"
        android:layout_gravity="center"
        android:background="@drawable/orange_button"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/a_btnAddItem"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
