<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/no_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnMakeADish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a dish"
        android:layout_gravity="center"
        android:background="@drawable/blue_button"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtRecipe"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btnMakeADish"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of recipe"
       android:textStyle="bold"
        android:id="@+id/txtRecipe"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnHowToCook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to cook"
        android:layout_gravity="center"
        android:background="@drawable/orange_button"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/listView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
